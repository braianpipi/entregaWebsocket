<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Entrega WEBSOCKET</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h2>Formulario de carga de producto</h2>
      <div class="container">
        <form action="/productos" method="POST">
          <div class="form-group">
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre del Producto</label>
              <input
                type="text"
                name="title"
                placeholder="Title"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <label for="precio" class="form-label">Precio</label>
              <input
                type="number"
                name="price"
                placeholder="Price"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <label for="thumbnail" class="form-label">Direccion URL</label>
              <input
                type="text"
                name="thumbnail"
                placeholder="Thumbnail"
                class="form-control"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              INGRESAR Producto
            </button>
          </div>
        </form>
      </div>
      <% if(products.length >0){ %>
      <h2 style="color: #5f9ea0; width: 20px">
        Historial de productos cargados
      </h2>
      <table class="table">
        <tr>
          <th>Nombre de Producto</th>
          <th>Precio de Producto</th>
          <th>Direccion Url Imagen del producto</th>
        </tr>
        <% products.forEach(product=>{%>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><img style="width:50px; height:50px;" src="<%=product.thumbnail %>" /></td>
        </tr>
        <% }) %> <% }else{ %>
        <h3 style="color: crimson; background-color: black">
          No se registran productos ingresados.
        </h3>
        <% } %>
      </table>
      <h2>WEBSOCKET</h2>
      <div class="container">
        <div class="d-flex flex-column align-items-center">
          <h3 class="mensajesTitulo">Centro de Mensajes</h3>
          <div>
            <input
              type="email"
              class="form-control"
              required
              placeholder="email@email.com"
              id="email"
            />
            <div id="messagesContainer"></div>
            <input
              type="text"
              class="form-control"
              required
              placeholder="Message"
              id="message"
            />
            <button class="btn btn-secondary" type="submit"  id="send">Enviar</button>
          </div>
        </div>
      </div>
      <div id="messagecontainer">

      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../main.js"></script>
  </body>
</html>
